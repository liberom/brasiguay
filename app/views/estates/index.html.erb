<p id="notice"><%= notice %></p>

<h1>Estates</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Modality</th>
      <th>User</th>
      <th>Price</th>
      <th>Currency</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estates.each do |estate| %>
      <tr>
        <td><%= estate.title %></td>
        <td><%= estate.type %></td>
        <td><%= estate.modality %></td>
        <td><%= estate.user_id %></td>
        <td><%= estate.price %></td>
        <td><%= estate.currency %></td>
        <td><%= estate.area %></td>
        <td><%= link_to 'Show', estate %></td>
        <td><%= link_to 'Edit', edit_estate_path(estate) %></td>
        <td><%= link_to 'Destroy', estate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

