<p id="notice"><%= notice %></p>

<h1>Learnings</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Institution</th>
      <th>Date from</th>
      <th>Date to</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @learnings.each do |learning| %>
      <tr>
        <td><%= learning.profile_id %></td>
        <td><%= learning.institution %></td>
        <td><%= learning.date_from %></td>
        <td><%= learning.date_to %></td>
        <td><%= learning.description %></td>
        <td><%= link_to 'Show', learning %></td>
        <td><%= link_to 'Edit', edit_learning_path(learning) %></td>
        <td><%= link_to 'Destroy', learning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

